            </intent-filter>
        </activity>
        <activity
            android:name=".WriteActivity"
            android:launchMode="standard" />

        <service
            android:name=".Notice.ClockService"
            android:enabled="true"
            android:exported="true" />

        <service android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote">
